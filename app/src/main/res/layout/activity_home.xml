<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/fondo"
    tools:context=".HomeActivity">

    <ScrollView
        android:layout_width="412dp"
        android:layout_height="732dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <EditText
                android:id="@+id/editTextTextPersonName"
                android:layout_width="381dp"
                android:layout_height="41dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/borde_redondog"
                android:drawableLeft="@drawable/ic_baseline_search_24"
                android:ems="10"
                android:hint=" Libro o Autor"
                android:inputType="textPersonName"
                android:paddingLeft="25dp" />

            <TextView
                android:id="@+id/lbl_Bienvenido"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Bienvenido"
                android:textColor="@color/colorPrimary"
                android:textSize="28dp" />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="469dp"
                android:layout_height="189dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/banner" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Recomendaciones"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/colorIndigo"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_alma" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_fantasma" />

                    <ImageView
                        android:id="@+id/imageView9"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_lider" />

                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_silencio" />

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="121dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/book_soledad" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:fontFamily="@font/fredoka_one"
                android:text="Categorias"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_marginBottom="50dp"
                android:background="#80BEEF"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_artes" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#009688"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="ARTES"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_filosofia" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#9C27B0"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="FILOSOFIA"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_geografia" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#E91E63"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="GEOGRAFIA"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_historia" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#673AB7"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="HISTORIA"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_literatura" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#3F51B5"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="LITERATURA"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_mate" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#2196F3"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="MATES"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="121dp"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView17"
                            android:layout_width="101dp"
                            android:layout_height="135dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/cat_religion" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="101dp"
                            android:layout_height="24dp"
                            android:background="#4CAF50"
                            android:fontFamily="@font/fredoka_one"
                            android:gravity="center"
                            android:text="RELIGION"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@color/white" />

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>