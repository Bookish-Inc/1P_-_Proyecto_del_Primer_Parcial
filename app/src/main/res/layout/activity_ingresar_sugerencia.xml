<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".Sugerencia.IngresarSugerencia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/bookish_transparente" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:fontFamily="@font/fredoka_one"
                android:text="Sugerencias"
                android:textAlignment="center"
                android:textColor="@color/colorBlanco"
                android:textSize="25sp" />

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/borde_scroll"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="319dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="25dp"
                    android:background="#00FFFFFF"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/fredoka_one"
                        android:text="Título"
                        android:textColor="@color/colorBlanco"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_Titulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/fresca"
                        android:hint="El principito"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="Edición"
                        android:textColor="@color/colorBlanco"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_Edicion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Quinta"
                        android:inputType="textPersonName"
                        android:text=""
                        android:fontFamily="@font/fresca"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textViewed"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="Editorial"
                        android:textColor="@color/colorBlanco"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_Editorial"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:fontFamily="@font/fresca"
                        android:hint="Emecé"
                        android:inputType="textPersonName"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="Cubierta"
                        android:textColor="@color/colorBlanco"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/spn_Cubierta"
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:fontFamily="@font/fresca"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="Fecha de Publicación"
                        android:textColor="@color/colorBlanco"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/dtp_FechaPublicaciion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:inputType="date"
                        android:fontFamily="@font/fresca"
                        android:textSize="22sp"
                        android:textColor="@color/black"
                        android:focusable="false"
                        android:clickable="true"/>


                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="Nombre Autor del Libro"
                        android:textColor="@color/colorBlanco"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_NombreAutor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="Antoine "
                        android:inputType="textPersonName"
                        android:text=""
                        android:fontFamily="@font/fresca"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="Apellido del Autor del Libro"
                        android:textColor="@color/colorBlanco"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_ApellidoAutor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="De Saint-Exupéry"
                        android:inputType="textPersonName"
                        android:text=""
                        android:fontFamily="@font/fresca"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/textView13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/fredoka_one"
                        android:text="Comentarios"
                        android:textColor="@color/colorBlanco"
                        android:textSize="15sp" />

                    <EditText
                        android:id="@+id/txt_Comentarios"
                        android:layout_width="match_parent"
                        android:layout_height="88dp"
                        android:ems="10"
                        android:inputType="text|textMultiLine"
                        android:lines="8"
                        android:maxLines="10"
                        android:minLines="6"
                        android:scrollbars="vertical"
                        android:text=""
                        android:fontFamily="@font/fresca"
                        android:textSize="22sp"
                        android:textColor="@color/black"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btn_registrar"
                            android:layout_width="182dp"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="20dp"
                            android:onClick="onBtnRegistrar"
                            android:text="Registrar Sugerencia" />

                        <Button
                            android:id="@+id/btn_verSugerencias"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:text="Ver"
                            app:icon="@android:drawable/ic_menu_view" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>